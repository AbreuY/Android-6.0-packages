<?xml version="1.0" encoding="utf-8"?>
<com.wx.hallview.views.RootView android:background="#ff000000" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="@dimen/hall_view_width"
        android:layout_height="@dimen/hall_view_width"
        android:layout_marginTop="@dimen/hall_view_marginTop"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/back"
        android:background="@drawable/back_bg"
        android:visibility="gone"
        android:layout_width="@dimen/hall_view_width"
        android:layout_height="36.0dip"
        android:layout_marginTop="-36.0dip"
        android:layout_below="@id/fragment_container"
        android:layout_centerHorizontal="true" />
    <Button
        android:textColor="#ffff0000"
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</com.wx.hallview.views.RootView>